# Copy to .env and fill
RWGPS_CLIENT_ID=your_rwgps_client_id
RWGPS_CLIENT_SECRET=your_rwgps_client_secret
RWGPS_REDIRECT_URI=http://localhost:3000/auth/ridewithgps/callback
GOOGLE_API_KEY=your_google_api_key
SESSION_SECRET=change_this_for_prod

# Base URL for the application (used for email verification links)
BASE_URL=http://localhost:3001

# Mailersend API Configuration
MAILERSEND_API_KEY=your_mailersend_api_key
MAILERSEND_FROM_EMAIL=noreply@routeassistant.app
MAILERSEND_FROM_NAME=Route Assistant
MAILERSEND_VERIFICATION_TEMPLATE_ID=your_verification_template_id
MAILERSEND_BETA_ACCESS_TEMPLATE_ID=your_beta_access_template_id

# POI Provider Configuration (comma-separated list)
ENABLED_POI_PROVIDERS=google,osm,mock

# Rate limiting (optional overrides)
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX=100
RATE_LIMIT_DEBUG=0

# Proxy configuration (set if running behind a load balancer or CDN)
# Examples: TRUST_PROXY=true, TRUST_PROXY=1, TRUST_PROXY=loopback
TRUST_PROXY=
